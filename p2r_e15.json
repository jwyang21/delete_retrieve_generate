{
  "training": {
    "optimizer": "adam",
    "learning_rate": 0.0003,
    "max_norm": 3.0,
    "epochs": 15,
    "batches_per_report": 200,
    "batches_per_sampling": 500,
    "random_seed": 1
  },
  "data": {
    "src": "data/processed/small_poem_train_corpus.txt",
    "tgt": "data/processed/small_reddit_train_corpus.txt",
    "src_test": "data/processed/poem_test_corpus.txt",
    "tgt_test": "data/processed/reddit_test_corpus.txt",
    "src_vocab": "data/processed/entire_small_train_vocab.txt",
    "tgt_vocab": "data/processed/entire_small_train_vocab.txt",
    "share_vocab": true,
    "attribute_vocab": "data/processed/small_poem_attribute_ngram_vocab_s5.5.txt",
    "ngram_attributes": true,
    "batch_size": 256,
    "max_len": 50,
    "working_dir": "p2r_e15"
  },
    "model": {
        "model_type": "delete_retrieve",
        "emb_dim": 128,
        "attention": false,
        "encoder": "lstm",
        "src_hidden_dim": 512,
        "src_layers": 1,
        "bidirectional": true,
        "tgt_hidden_dim": 512,
        "tgt_layers": 1,
        "decode": "greedy",
        "dropout": 0.2
    }
}
